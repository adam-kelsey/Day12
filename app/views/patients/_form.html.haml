= form_for [@hospital, @patient] do |p|
  - if @patient.errors.any?
    - @patient.errors.full_messages.each do |message|
      = message
      %br/
      %br/
  = p.label :first_name
  = p.text_field :first_name
  %br/
  = p.label :last_name
  = p.text_field :last_name
  %br/
  = p.label :dob
  = p.date_select :dob, :start_year=>1915, :end_year=>2015
  %br/
  = p.label :description
  = p.text_field :description
  %br/
  = p.label :gender
  = p.radio_button(:gender, "male")
  = p.label(:gender, "male")
  = p.radio_button(:gender, "female")
  = p.label(:gender, "female")
  %br/
  = p.label :bloodtype
  = p.select :bloodtype, options_for_select(Patient::BLOODTYPE_OPTIONS, p.object.bloodtype), include_blank: "--- Select ---"
  %br
  .checkbox
    = hidden_field_tag 'patient[medication_ids][]', ''
    - @medications.each do |med|
      %label
        = check_box_tag 'patient[medication_ids][]', med.id, @patient.medications.include?(med)
        = med.medication_name
  = p.submit
  %br/
  %br/
  = link_to "Cancel", hospital_patients_path
















