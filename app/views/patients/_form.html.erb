<%= form_for @patient do |p| %>
  <% if @patient.errors.any? %>
    <% @patient.errors.full_messages.each do |message| %>
    <%= message %>
    <br>
    <br>
    <% end %>
  <% end %>

  <%= p.label :first_name %>
  <%= p.text_field :first_name %>
  <br>
  <%= p.label :last_name %>
  <%= p.text_field :last_name %>
  <br>
  <%= p.label :dob %>
  <%= p.date_select :dob, :start_year=>1915, :end_year=>2015 %>
  <br>
  <%= p.label :description %>
  <%= p.text_field :description %>
  <br>
  <%= p.label :gender %>
  <%= p.radio_button(:gender, "male") %>
  <%= p.label(:gender, "male") %>
  <%= p.radio_button(:gender, "female") %>
  <%= p.label(:gender, "female") %>
  <br>
  <%= p.label :bloodtype %>
  <%= p.select :bloodtype, options_for_select(Patient::BLOODTYPE_OPTIONS, p.object.bloodtype), include_blank: "--- Select ---" %>
  <br>
  <%= p.submit %>
  <br>
  <br>
  <%= link_to "Cancel", root_path %>
  <% end %>