<h1>List of Patients</h1>

<%= link_to "Add Patient", new_hospital_patient_path(@hospital) %>

<ul>
<% @patients.each do |p| %>
    <li><%= p.first_name %></li>
    <li><%= p.last_name %></li>
    <li><%= p.dob %></li>
    <li><%= p.description %></li>
    <li><%= p.gender %></li>
    <li><%= p.bloodtype %></li>
    <%= link_to "Show", hospital_patient_path(@hospital, p) %>
<% end %>
<br>
<br>
<%= link_to "Home", root_path %>
</ul>