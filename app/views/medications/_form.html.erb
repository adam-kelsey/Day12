<%= form_for [@hospital, @patient, @medication] do |p| %>
  <% if @medication.errors.any? %>
    <% @patient.errors.full_messages.each do |message| %>
    <%= message %>
    <br>
    <br>
    <% end %>
  <% end %>

<%= p.label :medication_name %>
<%= p.text_field :medication_name %>
<br>
<%= p.label :medication_dosage %>
<%= p.text_field :medication_dosage %>
<br>
<%= p.submit %>
<br>
<br>
<% end %>
<%= link_to "Cancel", root_path %>
